<!DOCTYPE html>
<html>
  <head>
    <title>Snookums</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container">
      <header>
        <div id="menu">
          <%= link_to 'Home', root_path %>
          <%= link_to 'New Player', new_player_path %>
        </div>

        <h1>Snookums</h1>
      </header>

      <div id="big-board">
        <div class="entry">
          <p class="description">Top Cat</p>
          I Don't Know
        </div>
        <div class="entry">
          <p class="description">Season Average</p>
          100
        </div>
        <div class="entry">
          <p class="description">Bottom Player</p>
          I Really Don't Know
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
