<div id="players">
  <% @players.each do |player| %>
    <div class='player'>
      <div class='total'>
        <h4>Season Total</h4>
        <%= player.total_points %>
      </div>
      <%= render partial: 'profile', locals: { player: player } %>
      <%= render partial: 'description', locals: { description: player.description } %>
    </div>
  <% end %>
</div>
